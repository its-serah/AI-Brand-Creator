# AI Brand Creator Environment Configuration

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-credentials.json
GCS_BUCKET=your-project-id-brand-assets
GCS_MODEL_BUCKET=your-project-id-ml-models

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
AI_MODEL_ID=runwayml/stable-diffusion-v1-5
DEVICE=cpu  # Use 'cuda' if GPU available
INFERENCE_STEPS=15
GUIDANCE_SCALE=7.5
IMAGE_SIZE=512

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO
DEBUG=false

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.run.app

# Storage Paths (for local development)
STORAGE_DIR=./storage
LOGOS_DIR=./storage/logos
ASSETS_DIR=./storage/assets
TEMP_DIR=./storage/temp

# Task Queue (optional)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_DEBUG_MODE=false

# Performance Tuning
MAX_WORKERS=1
BATCH_SIZE=1
MODEL_CACHE_SIZE=2
MEMORY_LIMIT=4Gi
